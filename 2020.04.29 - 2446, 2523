def star(n):
    for i in range (n,0,-1):
        print(' '*(n-i)+'*'*(2*i-1))
    for i in range (2,n+1):
        print(' '*(n-i)+'*'*(2*i-1))
n=int(input())
star(n)





def star(n):
    for i in range (1,n+1):
        print('*'*i)

    
    for i in range (1,n):
        print('*'*(n-i))
        
n=int(input())
star(n)
