#include <stdio.h>

int main(void) {
	int x, sth, i, sum=0;
	
	scanf("%d", &x);
	
	for(i=1;;i++){
		sum+=i;
		if(x<=sum){
		
			if(i%2!=0){
				sth=x-(sum-i)-1;
				printf("%d/%d", i-sth, 1+sth);
				break;
			}
			else if(i%2==0){
				sth=x-(sum-i)-1;
				printf("%d/%d", 1+sth, i-sth);
				break;
			}
		}
		else continue;
	}
	return 0;
}
